/* pages/demand/detail/user/detail.wxss */


.container {
  width: 100%;
  height: calc(100% - 100rpx);
  display: flex;
  flex-direction: column;
}

.row {
  width: 750rpx;
  /* flex: 1; */
  position: relative;
  background: #fff;
}

.row .title {
  position: absolute;
  top: 20rpx;
  left: 5rpx;
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  /* background: #333; */
  color: #333;
  /* text-align: center; */
  padding-left: 30rpx; 
  font-size: 36rpx;
}

.row .inner {
  width: calc(100% - 40rpx);
  height: calc(100% - 40rpx);
  margin: 20rpx;
  /* border: 2rpx solid #eee; */
  border-radius: 5rpx;
  display: flex;
  min-height: 200rpx;
}

.row .inner .detail {
  width: 100%;
  /* height: 100rpx; */
  margin-top: 80rpx;
  /* background: red; */
  display: block;
  padding: 0 40rpx;
  color: #666;  
  background: #f2f2f2;
}

.row .inner .detail .item {
  width: 300rpx;
  height: 60rpx;
  /* margin: 10rpx 10rpx 10rpx 0rpx; */
  margin-right: 10rpx;
  /* background: gray; */
  /* float: left; */
  display: inline-block;
  color: #666;
  line-height: 60rpx;
}

.plan-container {
  margin-top: 80rpx;
  width: 100%;
}

.plan {
  height: 320rpx;
  width: 100%;
  /* background: red; */
  border: 2rpx solid #eee;
  /* padding: 20rpx; */
  /* padding-left: 0; */
  margin: 10rpx 0;
  position: relative;
}

.plan .tip {
  position: absolute;
  height: 44rpx;
  width: 120rpx;
  top: 5rpx;
  left: 5rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 44rpx;
  text-align: center;
  padding-left: 10rpx;
  
}

.plan .tip-back {
  position: absolute;
  background: #EB544D;
  height: 44rpx;
  width: 120rpx;
  top: 5rpx;
  left: 5rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 44rpx;
  text-align: center;
  border-width: 20rpx;
  border-style: solid;
  border-color:  transparent transparent transparent white;
}

.plan .left {
  width: 300rpx;
  height: 300rpx;
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.plan .left .pic{
  width: 100%;
  height: 100%;
}

.plan .right {
  width: 350rpx;
  height: 260rpx;
  /* background: red; */
  margin-left: 10rpx;
  float: left  
}

.plan .right .row {
  width: 100%;
  height: 130rpx;
  margin-top: 20rpx;
}

.plandesc {
  width: 140rpx;
  height: 50rpx;
  margin: 10rpx 15rpx;
  float: left;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  background: #BCBCBC;
  font-size: 24rpx;
}

.heads {
  display: flex;
  align-content: center;
  justify-content: center;
}

.head {
  height: 80rpx;
  width: 80rpx;
  margin: 15rpx;
  margin-bottom: 0;
  border-radius: 100rpx;
}
.head-name {
  height: 120rpx;
  width: 110rpx;
  text-align: center;
  font-size: 20rpx;
}
