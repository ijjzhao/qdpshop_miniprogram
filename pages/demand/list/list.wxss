/* pages/demand/list/list.wxss */
@import "../../../lib/mycss/common.wxss";

.title {
  font-size: 36rpx;
  margin-left: 10rpx;
}

.row {
  width: 700rpx;
  height: 220rpx;
  margin: 25rpx;
  /* border: 2rpx solid #ccc; */
  padding: 10rpx;
  background: #f2f2f2;
}

.row .left {
  width: 230rpx;
  height: 100%;
  /* background: red; */
  float: left;
}

.row .right {
  width: 430rpx;
  height: 100%;  
  /* margin-left: 10rpx;  */
  /* background: green; */
  float: right;
  display: flex;
  flex-direction: column;
}

.row .left .pic {
  width: 100rpx;
  height: 100rpx;
  margin-left: 65rpx;
  margin-top: 29rpx;
  border-radius: 50rpx;
}

.row .left .pic .pic {
  width: 100%;
  height: 100%;
  margin: 0;
  /* background: blue; */
  padding: 0;
}

.row .left .name {
  height: 67rpx;
  line-height: 67rpx;
  margin-bottom: 5rpx;
  width: 100%;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}

.row .right .line {
  width: calc(100% - 10rpx);
  margin: 5rpx;
  flex: 1;
  /* background: greenyellow; */
  display: flex;
  align-items: center;
  justify-content: middle;
}

.text {
  color: #333;
  font-size: 28rpx;
}

.bold {
  font-weight: 700;
}

.light {
  color: #666;
}

.flex {
  flex: 1
}

.red {
  color: red;
  /* #b4282d */
}

.detail {
  width: 120rpx;
  height: 50rpx;
  background: #ccc;
  text-align: center;
  font-size: 32rpx;
}

.lastrow {
  margin-bottom: 130rpx;
}