/* pages/ucenter/couponbag/couponbag.wxss */

page {
  height: 100%;
}

.coupon-bag {
  width: 750rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-bag .main {
  width: 600rpx;
  height: 760rpx;
  padding: 40rpx;
  border-radius: 10rpx;
  position: relative;
  background: rgba(0, 0, 0, 0.1) url() center;
  background-size: 100%;
}

.coupon-bag .main .btn {
  position: absolute;
  width: 520rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #333;
  color: #fff;
  border-radius: 10rpx;
  bottom: 40rpx;
  left: 40rpx;
}

