  height: 88rpx;
  margin: 0 45rpx;
}

.item3 .active {
  background: #333;
  color: #fff;
}

.item3 .btn {
  height: 88rpx;
  width: 200rpx;
  line-height: 88rpx;
  float: left;
  margin: 0 10rpx;
