/* pages/ucenter/info/index/index.wxss */

page  {
  width: 100%;
  height: 100%;
}

.title {
  font-size: 36rpx;
  width: 750rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}

.info {
  margin: 50rpx 5rpx;
  height: 300rpx;
  background: #eee;
  position: relative;
}

.info-pic {
  height: 400rpx;
  width: 300rpx;
  background: #eee;
  position: absolute;
  top: -50rpx;
  left: 50rpx;
  border-radius: 6rpx;
}

.avatarUrl-container {
  width: 300rpx;
  height: 400rpx;
  position: relative;
  overflow: hidden;
  border-radius: 6rpx;  
}

.avatarUrl {
  height: 400rpx;
  width: 400rpx;
  left: -50rpx;
  position: absolute
}

.info-detail {
  float: right;
  margin-right: 80rpx;
  line-height: 100rpx;
}

.info-line {
  font-size: 32rpx;
}

.rows {
  margin: 100rpx 60rpx;
}

.row {
  height: 140rpx;
  border-bottom: 1rpx solid rgb(235, 235, 235);
}

.row-text {
  font-size: 32rpx;
  line-height: 140rpx;
  color: #777;
}

.right {
  float: right;
}

.login {
  width: 600rpx;
  height: 350rpx;
  position: absolute;
  left: 74rpx;
  top: calc(50% - 200rpx);
  background: #777;
  border-radius: 10rpx;
}

.login .text {
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}

.login .btn {
  width: 500rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 50rpx;
  border-radius: 45rpx;
  background: #333;
  color: #fff;
  font-size: 30rpx;
  box-shadow: 0rpx 5rpx 15rpx #555
}

.hidden {
  display: none;
}


.coupon-bag {
  width: 750rpx;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.coupon-bag .main {
  width: 600rpx;
  height: 760rpx;
  padding: 40rpx;
  border-radius: 10rpx;
  position: relative;
  background: rgba(0, 0, 0, 0.1) url(https://img.qingdapei.net/giftPop.png?v=2) center;
  background-size: 100% 103%;
}

.coupon-bag .main .btn {
  position: absolute;
  /* width: 540rpx; */
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #333;
  color: #fff;
  border-radius: 10rpx;
  bottom: 50rpx;
  left: 30rpx;
  right: 30rpx;
}