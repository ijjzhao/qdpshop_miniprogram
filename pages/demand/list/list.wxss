/* pages/demand/list/list.wxss */
@import "../../../lib/mycss/common.wxss";

.title {
  font-size: 36rpx;
  margin-left: 10rpx;
}

.row {
  width: 730rpx;
  height: 250rpx;
  margin: 10rpx;
  border: 2rpx solid #ccc;
  padding: 10rpx;
}

.row .left {
  width: 230rpx;
  height: 100%;
  /* background: red; */
  float: left;
}

.row .right {
  width: 460rpx;
  height: 100%;  
  /* margin-left: 10rpx;  */
  /* background: green; */
  float: right;
  display: flex;
  flex-direction: column;
}

.row .left .pic {
  width: 138rpx;
  height: 138rpx;
  margin-left: 46rpx;
  margin-top: 20rpx;
}

.row .left .pic .pic {
  width: 100%;
  height: 100%;
  margin: 0;
  background: blue;
  padding: 0;
}

.row .left .name {
  height: 67rpx;
  line-height: 67rpx;
  margin-bottom: 5rpx;
  width: 100%;
  text-align: center;
  color: #333;
}

.row .right .line {
  width: calc(100% - 10rpx);
  margin: 5rpx;
  flex: 1;
  /* background: greenyellow; */
  display: flex;
  align-items: center;
  justify-content: middle;
}

.text {
  color: #333;
  font-size: 28rpx;
}

.flex {
  flex: 1
}

.red {
  color: red;
  /* #b4282d */
}

.detail {
  width: 100rpx;
  background: #eee;
  text-align: center;
  font-size: 30rpx;
}

.lastrow {
  margin-bottom: 130rpx;
}