  text-align: center;
}

.item3 .style-pic-left {
  left: -350rpx;
  top: 70rpx;
  opacity: 0.6;
  background: #fff;
  z-index: 1;
  transform: scale(0.95)
}

.item3 .style-pic-right {
  left: 550rpx;
  top: 70rpx;
  opacity: 0.6;
  z-index: 1;
  transform: scale(0.95)  
}

.anim-middle-left {
  animation: middle-to-left 0.4s;
  -moz-animation: middle-to-left 0.4s;
  -webkit-animation: middle-to-left 0.4s;
  -o-animation: middle-to-left 0.4s;
}

@keyframes middle-to-left {
  from {left: 100rpx; top: 70rpx;}
  to {left: -350rpx; top: 0rpx;}
}

.anim-right-middle {
  animation: right-to-middle 0.4s;
  -moz-animation: right-to-middle 0.4s;
  -webkit-animation: right-to-middle 0.4s;
  -o-animation: right-to-middle 0.4s;
}

@keyframes right-to-middle {
  from {left: 550rpx; top: 70rpx;}
  to {left: 100rpx; top: 0rpx;}
}

