/* pages/plan/detail/detail.wxss */
@import "../../../lib/mycss/plan";
@import "../../../lib/mycss/common";

.plan-pic {
  /* margin: 0 100rpx 250rpx 100rpx; */
  width: 750rpx;
  height: 750rpx;
}

.goods-title {
  font-size: 34rpx;
  font-weight: 700;
  padding-left: 20rpx;
  color: #555;
}

.style-item-text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 0 30rpx;
  margin-bottom: 50rpx;
}

.style-item-img {
  width: 275rpx;
  height: 275rpx;
  left: 50rpx;
  top: 20rpx;
  overflow: hidden;
}

.style-item-img .img{
  position: absolute;
  width: 375rpx;
  height: 375rpx;
  left: -50rpx;
  top: -50rpx;
}

.item-price {
  width: 100%;
  color: #B4282D;
  bottom: 20rpx;
  position: absolute;
  text-align: center;
  font-size: 26rpx;
}

.item-checkbox {
  position: absolute;  
  top: 10rpx;
  left: 10rpx;
}

.service-policy {
  width: 750rpx;
  height: 50rpx;
  background: #f2f2f2;
  padding: 0 31.25rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}

.service-policy .item {
  background: url(http://nos.netease.com/mailpub/hxm/yanxuan-wap/p/20150730/style/img/icon-normal/servicePolicyRed-518d32d74b.png) 0 center no-repeat;
  background-size: 10rpx;
  padding-left: 15rpx;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #666;
}