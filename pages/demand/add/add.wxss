/* pages/demand/add/add.wxss */
@import "../../../lib/mycss/common.wxss";

page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: calc(100% - 100rpx);
  display: flex;
  flex-direction: column;
  background: #fff;    
}

.row {
  width: 750rpx;
  /* flex: 1; */
  position: relative;
}

.row .title {
  position: absolute;
  top: 40rpx;
  left: 5rpx;
  width: 220rpx;
  height: 60rpx;
  /* background: #333; */
  border: 2rpx solid #f2f2f2;
  /* text-align: center; */
  /* padding-left: 20rpx;  */
  display: flex;
  align-content: center;
}

.row .title .text {
  font-size: 32rpx;
  line-height: 60rpx;
  height: 60rpx;
  color: #333;  
  display: inline-block;
  margin: 0;
}

.row .title .image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  display: inline-block;  
}

.row .inner {
  width: 660rpx;
  /* height: calc(100% - 40rpx); */
  margin: 20rpx 45rpx;
  border: 2rpx solid #f2f2f2;
  border-radius: 5rpx;
  display: flex;
}

.row .inner .desc {
  /* height: 88rpx;
  color: #555;
  font-size: 28rpx;
  width: 100%;
  text-align: right;
  padding-top: 20rpx; 
  padding-right: 20rpx; */
  position: absolute;
  top: 40rpx;
  right: 45rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
  text-align: right;
  font-size: 28rpx;
  display: flex;
  align-content: center;
}

.row .inner .desc .image{
  height: 30rpx;
  width: 30rpx;
  margin-top: 15rpx;
  margin-right: 6rpx;
}

.row .inner .grid {
  width: 100%;
  margin-top: 90rpx;
  /* background: red; */
  padding: 20rpx;
  flex: 1;
}

.row .inner .grid .grid-item {
  width: 160rpx;
  height: 60rpx;
  border: 2rpx solid #D7D7D7D7;
  line-height: 60rpx;
  text-align: center;
  margin: 10rpx 20rpx;
  float: left;
  border-radius: 5rpx;
  font-size: 26rpx;
}

.row .input {
  height: 100rpx;
  width: 560rpx;
  margin: -150rpx 85rpx;
  /* background: darkblue */
}

.row .input .input {
  width: 520rpx;  
  /* border-bottom: 2rpx solid #ccc; */
  background: #e4e4e4;
  height: 100rpx;
  padding: 0 20rpx;
  margin: 0;
}

.placeholder {
  text-align: left;
  padding: 0 20rpx;
}

.selected {
  background: #333;
  color: #fff;
}

.bottom-btn {
  width: 660rpx;
  left: 45rpx;
  bottom: 40rpx;
}

.explanation-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(51, 51, 51, 0.274);
  z-index: 99;
}

.explanation {
  width: 600rpx;
  height: 400rpx;
  background: #fff;
  box-shadow: 0rpx 5rpx 15rpx 5rpx #00000033;
  position: absolute;
  right: 50rpx;
  
}

.explanation-scene {
  top: 90rpx;
}

.explanation-budge {
  top: 420rpx;
}

.explanation-desc {
  top: 590rpx;
  
}

.explanation .title{
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #ccc;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
}

.explanation .content{
  width: 100%;
  height: 240rpx;
  text-align: center;
  position: relative;
}

.explanation .content .text{
  width: calc(100% - 60rpx);
  height: 140rpx;
  text-align: center;
  margin: 0 30rpx; 
  margin-top: 50rpx; 
  display: block;
}

.explanation .btn{
  position: absolute;
  bottom: 0;
  left: 0;right: 0;
  /* width: 100%; */
  height: 80rpx;
  line-height: 80rpx;  
  text-align: center;
  font-size: 32rpx;
}